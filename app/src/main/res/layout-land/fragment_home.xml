<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_city"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        app:queryHint="Город"
        app:iconifiedByDefault="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_city"
        android:layout_margin="12dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            style="@style/textStyle"
            tools:text="KAZAN"/>

        <TextView
            android:id="@+id/tv_updated_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_city"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            tools:text="24 July 2001, 20:01"
            style="@style/textStyle"/>

        <RelativeLayout
            android:id="@+id/rl_todays_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_updated_at"
            android:layout_marginTop="24dp">

            <RelativeLayout
                android:id="@+id/rl_main_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--todo strings.xml-->
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="Clear Sky"
                    style="@style/textStyle"/>

                <RelativeLayout
                    android:id="@+id/rl_min_and_max_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_status"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/temp_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Min: 17°"
                        android:textSize="16sp"
                        style="@style/textStyle"/>

                    <TextView
                        android:id="@+id/temp_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/temp_min"
                        android:layout_marginStart="12dp"
                        tools:text="Max: 29°"
                        android:textSize="16sp"
                        style="@style/textStyle"
                        android:layout_toRightOf="@+id/temp_min"
                        android:layout_marginLeft="12dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_current_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_min_and_max_temp"
                    android:textSize="90sp"
                    app:fontFamily="sans-serif-thin"
                    tools:text="29°"
                    style="@style/textStyle"/>

            </RelativeLayout>

            <GridLayout
                android:id="@+id/gl_todays_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                android:layout_toEndOf="@+id/rl_main_info"
                android:layout_marginStart="24dp"
                android:layout_toRightOf="@+id/rl_main_info"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_sunrise"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/sunrise"
                        android:tint="#FFFFFF"/>

                    <TextView
                        android:id="@+id/sunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_sunrise"
                        android:layout_toRightOf="@+id/iv_sunrise"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        tools:text="02:41"
                        style="@style/textStyle"
                        android:layout_marginLeft="8dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_sunset"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/sunset"
                        android:tint="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tv_sunset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_sunset"
                        android:layout_toRightOf="@+id/iv_sunset"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        tools:text="19:57"
                        style="@style/textStyle"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_wind"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/wind"
                        android:tint="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tv_wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_wind"
                        android:layout_toRightOf="@+id/iv_wind"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        tools:text="12 km/h"
                        style="@style/textStyle"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_humidity"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/humidity"
                        android:tint="#FFFFFF"/>

                    <TextView
                        android:id="@+id/tv_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_humidity"
                        android:layout_toRightOf="@+id/iv_humidity"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        tools:text="27%"
                        style="@style/textStyle"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>

            </GridLayout>

        </RelativeLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_loading"
        style="@style/progressBarStyle"/>

</RelativeLayout>